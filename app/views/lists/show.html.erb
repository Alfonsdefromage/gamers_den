<div class="flex-flex">
  <div class="show-game">
    <div class="game-list">
      <h1><%= @list.name %></h1>
      <% current_user.games.each do |game| %>
        <% if game.bookmark(current_user).platform == @list.name %>
          <div class="game-details" id="game-<%=game.id%>">
            <%= image_tag game.cover_url, alt: "cover" %>
            <div class="game-info" data-controller="replace-bought-button">
              <h4><%= game.title %></h4>
              <%= link_to "", game_path(game), class: "list-link" %>
            </div>
          </div>
        <% end %>
      <% end %>
    </div>
  </div>
</div>
