<% if results.any? %>
  <div class="search-box">
    <% results.each do |game| %>
      <div class="search-items">
        <%= image_tag game.cover_url, alt: "cover", class: "search-img" %>
        <span> <strong><%= game.title %></strong> (<%= game.release_date.strftime("%Y") %>) </span>
        <%= link_to "", game_path(game), class: "list-link" %>
      </div>
    <% end %>
  </div>
<% end %>
